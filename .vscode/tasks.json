{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo run debug",
      "type": "shell",
      "command": "cargo run -v",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo run release",
      "type": "shell",
      "command": "cargo run -v --release",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo build -v",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$rustc"]
    }
  ]
}
